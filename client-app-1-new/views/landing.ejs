<!--REGISTRATION MODAL-->

<div class="modal fade" id="registration-modal" tabindex="-1" role="dialog" aria-labelledby="gridSystemModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content custom-modal">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title text-center" id="gridSystemModalLabel">Register</h4>
            </div>
            <div class="modal-body">
                <form action="/register" method="post">
                    <div class="row">
                        <div class="col-sm-5 col-sm-offset-1">
                            <input type="text" class="form-control" name="full_name">
                        </div>
                        <div class="col-sm-4">
                            <p>Enter Full name</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-5 col-sm-offset-1">
                            <input type="text" class="form-control" name="username">
                        </div>
                        <div class="col-sm-4">
                            <p>Enter Username</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-5 col-sm-offset-1">
                            <input type="email" class="form-control" name="email">
                        </div>
                        <div class="col-sm-4">
                            <p>Enter Email</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-5 col-sm-offset-1">
                            <input type="password" class="form-control" name="password">
                        </div>
                        <div class="col-sm-4">
                            <p>Enter Password</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-5 col-sm-offset-1">
                            <input type="text" class="form-control" name="roll_number">
                        </div>
                        <div class="col-sm-4">
                            <p>Enter Roll Number</p>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default custom-button" data-dismiss="modal">Close</button>
                        <input type="submit" class="btn btn-primary custom-button" value="Register">
                    </div>
                </form>

            </div>

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<!--/REGISTRATION MODAL-->


